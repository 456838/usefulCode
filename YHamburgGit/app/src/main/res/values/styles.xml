<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="gallery_ucrop_title_text">@string/gallery_ucrop_menu_crop</item>-->
    </style>

    <style name="Theme_Light.Default"/>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--splash start-->
    <style name="welcome_page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">100dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    <!--splash end-->


    <declare-styleable name="CirCleRefreshLayout">
        <attr name="AniBackColor" format="color"/>
        <attr name="AniForeColor" format="color"/>
        <attr name="CircleSmaller" format="integer"/>
    </declare-styleable>

    <style name="content_stytle" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@drawable/bg_textcolor_press</item>
    </style>

    <style name="category_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="Splitter">
        <item name="android:background">@color/splitter</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="VerticalSplitter">
        <item name="android:background">@color/splitter</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <dimen name="title_font">18.0dip</dimen>
    <dimen name="tab_title_font">15.0dip</dimen>
    <dimen name="normal_font">14.0dip</dimen>
    <dimen name="option_font">16.0dip</dimen>
    <dimen name="form_height">50.0dip</dimen>
    <dimen name="large_1_font">16.0dip</dimen>
    <dimen name="large_6_font">26.0dip</dimen>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="tv_333333_14">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="presonal_item" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/login_info</item>
        <item name="android:textColor">@color/login_string_item</item>
    </style>

    <style name="Smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Smile.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Smile.TextView._Black">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>

    <style name="Animations"/>

    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="main_footbar_radio" parent="footbar">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
    </style>

    <style name="footbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="preference_label_style">
        <item name="android:textSize">@dimen/text_label_font_size</item>
        <item name="android:textColor">@color/preference_label_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/layout_padding_left</item>
    </style>

    <style name="layout_padding_style">
        <item name="android:paddingLeft">@dimen/layout_padding_left</item>
        <item name="android:paddingRight">@dimen/layout_padding_right</item>
    </style>

    <style name="preference_title_style">
        <item name="android:textSize">@dimen/text_title_font_size</item>
        <item name="android:textColor">@color/preference_title_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/layout_padding_left</item>
        <item name="android:layout_height">@dimen/text_title_height</item>
    </style>

    <style name="content_order_style" parent="@android:style/TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#696969</item>
    </style>

    <style name="phone_only">
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">11</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="style_btn_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/takeout_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40.0dip</item>
    </style>

    <style name="progress_bar_style_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/takeout_progress_bar</item>
    </style>

    <style name="Login_info" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/login_info</item>
        <item name="android:textColor">@color/login_string_color</item>
    </style>

    <style name="textview" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title_text_theme">
        <item name="android:textSize">@dimen/title_font</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="tab_title_text_theme">
        <item name="android:textSize">@dimen/tab_title_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="hLine">
        <item name="android:background">@drawable/divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="hhLine">
        <item name="android:background">@drawable/divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3.0px</item>
    </style>

    <style name="vLine">
        <item name="android:background">#ffc9ced4</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="dialog_no_border_transparent_background" parent="@android:style/Theme.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@color/trans</item>
    </style>

    <style name="dialog_title_divider">
        <item name="android:background">@color/theme</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3.0px</item>
    </style>

</resources>
