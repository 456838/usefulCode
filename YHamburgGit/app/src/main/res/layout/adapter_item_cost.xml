<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lay_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_marginTop="10dip"
    android:background="@color/module_color"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="80dip"
        android:layout_height="fill_parent"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_thumbnail"
            />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="80dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_type"
            android:layout_marginRight="10dip"
            android:hint="消费时间"
            />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_thing"
            android:hint="消费类型"
            />

        <TextView
            android:id="@+id/tv_thing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="消费内容"
            android:textSize="20sp"
            android:textColor="@color/color_purple_500"
            />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_time"
            android:hint="消费金额"
            android:textColor="@color/color_indigo_700"
            />

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type"
            android:hint="暂无备注"
            />
    </RelativeLayout>
</LinearLayout>