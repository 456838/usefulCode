<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ebebeb"
            android:fadingEdge="none"
            android:scrollbars="none">

    <LinearLayout
        android:id="@+id/layout_all"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dip"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:id="@+id/rel_headpic"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/headpic_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="头像"
                android:textSize="16dip"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/iv_headIcon"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/pic_loading"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="昵称"
                android:textSize="16dip"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@+id/nickname_tv"
                android:background="@null"
                android:gravity="center|end"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14dip"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/sex"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="性别"
                android:textSize="16dip"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@+id/sex"
                android:background="@null"
                android:gravity="center|end"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14dip"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/birthday"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="生日"
                android:textSize="16dip"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@+id/birthday"
                android:background="@null"
                android:gravity="center|end"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14dip"
                />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/contact"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="联系方式"
                android:textSize="16dip"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@+id/contact"
                android:background="@null"
                android:gravity="center|end"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="16dp"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/area"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="地区"
                android:textSize="16dip"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@+id/area"
                android:background="@null"
                android:gravity="center|end"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14dip"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/tv_studio_name_summary"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="签名"
                android:textSize="16dip"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@+id/tv_studio_name_summary"
                android:background="@null"
                android:gravity="center|end"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="14dip"
                />
        </RelativeLayout>



    </LinearLayout>
</ScrollView>